{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tarifa list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Periodo</th>
                <th>Precio</th>
                <th>Validodesde</th>
                <th>Validohasta</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tarifa_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.periodo }}</td>
                <td>{{ entity.precio }}</td>
                <td>{% if entity.validoDesde %}{{ entity.validoDesde|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.validoHasta %}{{ entity.validoHasta|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tarifa_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tarifa_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tarifa_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
